{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++",
            "type": "shell",
            "command": "/usr/bin/g++",
           "args": [
                "-std=c++17",
                "-I", "/opt/homebrew/include",
                "-I", "../src",
                "main.cpp",
                "Graph.cpp",
                "Player.cpp",
                "SoccerPlayer.cpp",
                "BasketballPlayer.cpp",
                "-o", "main",
                "-lpthread"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-I", "src",
                "-I", "/opt/homebrew/include",
                "-I", "/opt/homebrew/Cellar/crow/1.2.1.2/include",
                "src/main.cpp",
                "src/Graph.cpp",
                "src/Player.cpp",
                "src/SoccerPlayer.cpp",
                "src/BasketballPlayer.cpp",
                "-o", "app",
                "-lpthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}